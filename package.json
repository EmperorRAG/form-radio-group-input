{
	"name": "@emperorrag/form-radio-group-input",
	"description": "A radio group input component for React forms, built with Radix UI and TypeScript.",
	"private": false,
	"version": "0.0.1",
	"author": "",
	"license": "MIT",
	"type": "module",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/EmperorRAG/form-radio-group-input.git"
	},
	"homepage": "https://github.com/EmperorRAG/form-radio-group-input#readme",
	"bugs": {
		"url": "https://github.com/EmperorRAG/form-radio-group-input/issues"
	},
	"keywords": [
		"react",
		"typescript",
		"radix-ui",
		"form",
		"radio",
		"input",
		"component",
		"ui",
		"library"
	],
	"main": "dist/form-radio-group-input.umd.cjs",
	"module": "dist/form-radio-group-input.js",
	"types": "dist/form-radio-group-input.d.ts",
	"files": [
		"dist",
		"README.md"
	],
	"exports": {
		".": {
			"import": "./dist/form-radio-group-input.js",
			"require": "./dist/form-radio-group-input.umd.cjs"
		}
	},
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build && npm run build:types",
		"build:types": "dts-bundle-generator --project tsconfig.types.json -o dist/form-radio-group-input.d.ts src/index.tsx",
		"build:storybook": "storybook build",
		"lint": "eslint .",
		"preview": "vite preview",
		"storybook": "storybook dev -p 6006",
		"test": "vitest --coverage",
		"test:storybook": "vitest --project=storybook --coverage",
		"test:unit": "vitest --project=unit --coverage"
	},
	"dependencies": {
		"@emperorrag/utilities": "^0.0.0",
		"@radix-ui/themes": "^3.2.1",
		"react": ">=18",
		"react-dom": "^19.1.1"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^4.1.1",
		"@eslint/js": "^9.33.0",
		"@storybook/addon-a11y": "^9.1.5",
		"@storybook/addon-docs": "^9.1.5",
		"@storybook/addon-vitest": "^9.1.5",
		"@storybook/react-vite": "^9.1.5",
		"@types/node": "^24.3.2",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@vitejs/plugin-react": "^5.0.0",
		"@vitest/browser": "^3.2.4",
		"@vitest/coverage-v8": "^3.2.4",
		"dts-bundle-generator": "^9.5.1",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-react-dom": "^1.53.1",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"eslint-plugin-react-x": "^1.53.1",
		"eslint-plugin-storybook": "^9.1.5",
		"globals": "^16.3.0",
		"playwright": "^1.55.0",
		"prettier": "3.6.2",
		"storybook": "^9.1.5",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.39.1",
		"vite": "^7.1.2",
		"vitest": "^3.2.4"
	},
	"peerDependencies": {
		"react": ">=18",
		"@emperorrag/utilities": "^0.0.0"
	}
}
